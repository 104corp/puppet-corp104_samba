
# [<%= @name %>] Share Definitions
[<%= @name %>]
<% if scope['comment'] -%>
  comment = <%= scope['comment'] %>
<% end -%>
<% if scope['browseable'] -%>
  browseable = yes
<% else -%>
  browseable = no
<% end -%>
<% if @writable -%>
  writable = yes
<% else -%>
  writable = no
<% end -%>
  path = <%= @path %>
<% if @write_list -%>
  write list = <%= @write_list %>
<% end -%>
<% if @guest -%>
  guest ok = yes
<% end -%>
<% if @create_mask -%>
  create mask = <%= @create_mask %>
<% end -%>
<% if @directory_mask -%>
  directory mask = <%= @directory_mask %>
<% end -%>
<% if @read_only -%>
  read only = yes
<% end -%>
<% if @valid_users -%>
  valid users = <%= @valid_users %>
<% end -%>
<% if @hosts_allow.is_a? Array -%>
  hosts allow = <%= @hosts_allow.join(' ') %>
<% end -%>
<% if @hosts_deny.is_a? Array -%>
  hosts deny = <%= @hosts_deny.join(' ') %>
<% end -%>